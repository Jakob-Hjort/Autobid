<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:autobid.ReactiveUI.ViewModels"
             x:Class="autobid.ReactiveUI.Views.ShellView"
             x:DataType="vm:ShellViewModel">

	<DockPanel>
		<!-- Header -->
		<Border DockPanel.Dock="Top" Height="56" Background="#0f172a" Padding="16,0">
			<Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
				<TextBlock Text="autobid" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
				<TextBlock Grid.Column="1" Text="{Binding Greeting}" Foreground="#cbd5e1" HorizontalAlignment="Right"/>
			</Grid>
		</Border>

		<!-- Venstremenu -->
		<Border DockPanel.Dock="Left" Width="100" >
			<!--Background="#111820" BorderBrush="#1f2937" BorderThickness="0,0,1,0"-->
			<StackPanel>
				<Button  Name="GoToProfile" Content="Min Profil" Command="{Binding GoToProfileCommand}" Width="100"/>
				<Button  Name="SetForSale" Content="SetForSale" Command="{Binding GoToSetForSaleCommand}" Width="100"/>
				<Button Name="GoToHome" Content="Home" Command="{Binding GoToHomeCommand}" Width="100"/>
			</StackPanel>
		</Border>

		<!-- Content -->
		<Border Padding="16">
			<ContentControl Content="{Binding CurrentPage}"/>
		</Border>
	</DockPanel>
</UserControl>
