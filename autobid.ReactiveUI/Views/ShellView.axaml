<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:autobid.ReactiveUI.ViewModels"
             x:Class="autobid.ReactiveUI.Views.ShellView"
             x:DataType="vm:ShellViewModel">

	<DockPanel>

		<!-- Venstremenu -->
		<Border DockPanel.Dock="Left" Width="200" >
			<!--Background="#111820" BorderBrush="#1f2937" BorderThickness="0,0,1,0"-->
			<StackPanel>
				<Button Name="GoToHome" Content="Home" Command="{Binding GoToHomeCommand}" Width="200"/>
				<Button  Name="SetForSale" Content="Set Auction for Sale" Command="{Binding GoToSetForSaleCommand}" Width="200" />
				<Button Name="BidHistory" Content="My Bid History" Command="{Binding GoToBidHistoryCommand}" Width="200" />
				<Button  Name="GoToProfile" Content="My Profil" Command="{Binding GoToProfileCommand}" Width="200"/>
			</StackPanel>
		</Border>

		<!-- Content -->
		<Border Padding="16">
			<ContentControl Content="{Binding CurrentPage}"/>
		</Border>
	</DockPanel>
</UserControl>
