<UserControl
  x:Class="autobid.ReactiveUI.Views.CreateUserView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="using:autobid.ReactiveUI.ViewModels"
  x:DataType="vm:CreateUserViewModel">
	<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto, Auto, Auto, Auto" ColumnDefinitions="Auto,*"
		  HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Grid.ColumnSpan="2" Text="Create user" FontSize="22" FontWeight="SemiBold"
				   Foreground="{StaticResource Brush.Text}" Margin="0 0 0 16"/>
		<TextBlock Grid.Row="1" Text="Username" Foreground="{StaticResource Brush.Muted}"/>
		<TextBox   Name="UsernameBox" Text="{Binding Username}" Grid.Row="1" Grid.Column="1" Width="260" Watermark="choose a username"/>
		<TextBlock Grid.Row="2" Text="Password" Foreground="{StaticResource Brush.Muted}"/>
		<TextBox   Name="PasswordBox" Grid.Row="2" Text="{Binding Password}" Grid.Column="1" Width="260" PasswordChar="•" Watermark="choose a password"/>
		<TextBlock Grid.Row="3" Text="Repeat password" Foreground="{StaticResource Brush.Muted}"/>
		<TextBox   Name="RepeatBox" Grid.Row="3" Grid.Column="1" Text="{Binding PasswordRepeat}" Width="260" PasswordChar="•" Watermark="repeat password"/>
		<TextBlock Grid.Row="4" Grid.Column="0" Text="CVR" IsVisible="{Binding IsCorporate}"/>
		<TextBox   Grid.Row="4" Grid.Column="1" Text="{Binding CVR}" IsVisible="{Binding IsCorporate}" Watermark="CVR"/>
		<TextBlock Grid.Row="4" Grid.Column="0" Text="CPR" IsVisible="{Binding !IsCorporate}"/>
		<TextBox   Grid.Row="4" Grid.Column="1" Text="{Binding CPR}" IsVisible="{Binding !IsCorporate}" Watermark="CPR"/>
		<TextBlock Grid.Row="5" Grid.Column="0" Text="Balance"/>
		<TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Balance}"/>
		<TextBlock Grid.Row="6" Grid.Column="0" Text="Credit" IsVisible="{Binding IsCorporate}"/>
		<TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Credit}" IsVisible="{Binding IsCorporate}"/>


		<StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="12">
			<CheckBox Name="CorporateBox" IsChecked="{Binding IsCorporate}" Content="Corporate user"/>
			<Button Name="CreateButton" Command="{Binding CreateUserCommand}" Content="Create" Classes="accent"/>
			<Button Name="BackButton" Content="Back to login" Command="{Binding GoBackCommand}"/>
		</StackPanel>
		<TextBlock Name="ErrorText" Grid.Row="6" Grid.ColumnSpan="2" Foreground="#f87171"/>
	</Grid>
</UserControl>
